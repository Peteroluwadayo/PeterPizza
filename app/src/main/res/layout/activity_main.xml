<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="2dp"
    android:background="#f9faf4"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            tools:context="com.arkandarcs.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:id="@+id/viewContainer"
                android:elevation="5dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/informationText"
                    android:text="Please enter the following information."
                    android:textSize="12dp" />

                <!--<com.github.florent37.materialtextfield.MaterialTextField-->
                <!--android:layout_width="300dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:mtf_labelColor="#666"-->
                <!--app:mtf_image="@drawable/ic_mail_grey600_24dp"-->
                <!--&gt;-->

                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Password"-->
                <!--android:textColor="#333"-->
                <!--android:textSize="15sp" />-->

                <!--</com.github.florent37.materialtextfield.MaterialTextField>-->

                <!--<com.github.florent37.materialtextfield.MaterialTextField-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->

                <!--app:mtf_cardCollapsedHeight="4dp"-->
                <!--app:mtf_image="@drawable/ic_mail_grey600_24dp"-->
                <!--app:mtf_animationDuration="1000"-->
                <!--app:mtf_labelColor="@android:color/holo_red_dark"-->
                <!--app:mtf_openKeyboardOnFocus="true">-->


                <EditText
                    android:id="@+id/customer_name"

                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:drawablePadding="13dp"
                    android:hint="@string/name_text"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/customer_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:drawablePadding="13dp"
                    android:hint="Address:"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/customer_state"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:drawablePadding="13dp"
                    android:hint="State:"
                    android:inputType="textCapWords"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/customer_lga"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:drawablePadding="13dp"
                    android:hint="LGA:"
                    android:inputType="textCapWords"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/customer_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:drawablePadding="13dp"
                    android:hint="Email Address:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/customer_number"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:drawablePadding="13dp"
                    android:hint="Phone Number:"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:typeface="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:id="@+id/quantityTextTop"
                android:layout_marginLeft="34dp"
                android:paddingRight="5dp"
                android:text="Quantity"
                android:textAlignment="center"
                android:textAllCaps="false"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10sp"
                    android:onClick="decrement"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/drawablebuttonstyle"
                    android:text="-"
                    android:textColor="#979797"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/button"
                    android:layout_toRightOf="@+id/button"
                    android:fontFamily="serif"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="#010f10"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/drawablebuttonstyle"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/quantity_text_view"
                    android:layout_toRightOf="@+id/quantity_text_view"
                    android:onClick="increment"
                    android:text="+"
                    android:textColor="#979797"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="10dp">

                <RadioGroup
                    android:id="@+id/crustgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp">

                    <RadioButton
                        android:id="@+id/thin_crust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Thin Crust"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/thick_crust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Thick Crust"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/toppingGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="27dp"
                    android:layout_marginRight="7dp">

                    <RadioButton
                        android:id="@+id/beef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/chicken"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/chicken"
                        android:fontFamily="cursive"
                        android:text="BBQ Beef"
                        android:textStyle="normal"
                        tools:layout_width="wrap_content" />

                    <RadioButton
                        android:id="@+id/chicken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/thick_crust"
                        android:layout_toRightOf="@+id/thick_crust"
                        android:fontFamily="cursive"
                        android:text="BBQ Chicken"
                        android:textStyle="normal" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/radioGroup2"
                    android:layout_alignLeft="@+id/radioGroup2"
                    android:layout_alignStart="@+id/radioGroup2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/crustTypeText"
                    android:drawablePadding="5dp"
                    android:text="Crust"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="UnknownId" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/toppingGroup"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/toppingGroup"
                    android:drawablePadding="5dp"
                    android:id="@+id/toppingTypeText"
                    android:text="Toppings"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/layout"
                android:layout_marginBottom="30sp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/drawablebuttonstyle"
                android:onClick="calculatePrice"
                android:textAllCaps="false"
                android:text="Order"
                android:textStyle="bold"
                android:textColor="#E8EFEE"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>
</androidx.cardview.widget.CardView>